<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="16dp"
  tools:context=".activity.MainActivity">

  <TextView
    android:id="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_marginTop="17dp"
    android:text="@string/cashAmount" />

  <LinearLayout
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_below="@id/title"
    android:layout_height="wrap_content">

    <LinearLayout
      android:id="@+id/from"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <EditText
        android:id="@+id/cashAmountFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="@string/from"
        android:ems="10"
        android:layout_marginBottom="10dp" />

      <Spinner
        android:id="@+id/currencyFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:entries="@array/currencies" />
    </LinearLayout>

    <LinearLayout
      android:id="@+id/to"
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

      <TextView
        android:id="@+id/cashAmountTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/to"
        android:ems="10"
        android:layout_marginBottom="10dp" />

      <Spinner
        android:id="@+id/currencyTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:entries="@array/currencies" />
    </LinearLayout>


  </LinearLayout>


  <Button
    android:id="@+id/findBeer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/container"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="36dp"
    android:text="@string/push_me"
    android:onClick="onClickConvertCurrencies" />


</RelativeLayout>